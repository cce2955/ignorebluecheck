{
  "manifest_version": 3,
  "name": "Twitter Blue Checkmark Blocker",
  "version": "1.0",
  "description": "Block content from Twitter users with a blue checkmark.",
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
